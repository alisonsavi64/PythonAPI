<%

setIndex = function(series, genreSerie, User){
	var dataHTML = ''
	dataHTML += `
	
	 <div class="container">
	 	<h1>${genreSerie}</h1><br>

                <div class="gallery">
                `
	for (i in series){

	if (series[i].serieGenre == genreSerie) { 
	 dataHTML += ` <img onclick="redirectToSpecificSerie(${series[i].serieId} , ${User != undefined ? User.userId : undefined})" value="${series[i].serieId}" src="data:image/${series[i].serieFormatImage}; base64, ${series[i].serieLogo}">`
            }

	}
	dataHTML += '</div></div>'
	return dataHTML


}


